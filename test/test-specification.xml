  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <categories>
    <category id="A" mandatory-property-idrefs="PA " optional-property-idrefs="CA"/>
    <category id="B">
      <categories sub-category-mandatory="true">
        <category id="A" mandatory-property-idrefs="XA "/>
        <category id="B"/>
      </categories>
    </category>

    <!--  -->
  </categories>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <price-ranges>
    <price-range min-inclusive="5.1" max-inclusive="100000" id="expensive"/>
