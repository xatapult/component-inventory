<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../grammar/ci-specification.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<component-inventory-specification xmlns="https://eriksiegel.nl/ns/component-inventory" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:sml="http://www.eriksiegel.nl/ns/sml" xsi:schemaLocation="https://eriksiegel.nl/ns/component-inventory ../grammar/ci-specification.xsd">

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <properties>
    <property id="VOLTAGE" value-pattern="^[0-9][0-9]*$"/>
    <property id="CONTACTS" value-pattern="^[0-9][0-9]*$"/>
    <property id="CURRENT" value-pattern="^[0-9][0-9]*$"/>
    <property id="RELAYTYPE" value-pattern="^(NORMAL|SPECIAL)$" default="NORMAL"/>
  </properties>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <categories>

    <category id="ICS" name="ICs" summary="Integrated circuits" mandatory-property-idrefs="VOLTAGE" optional-property-idrefs="CURRENT">
      <categories sub-category-mandatory="true">
        <category id="LOGIC" name="Logic ICs"/>
        <category id="OPAMP" name="Opamp ICs"/>
      </categories>
    </category>

    <category id="RELAYS" name="Relays" mandatory-property-idrefs="VOLTAGE CONTACTS" optional-property-idrefs="CURRENT RELAYTYPE">
      <categories sub-category-mandatory="false">
        <category id="SMALL" name="Small relays"/>
        <category id="BIG" name="Big relays"/>
      </categories>
    </category>

  </categories>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <price-ranges>
    <price-range min-inclusive="0.0" max-inclusive="1" id="cheap"/>
    <price-range min-inclusive="1.1" max-inclusive="5" id="midprice"/>
  </price-ranges>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <packages href-default-base-directory="../resources/packaging/">
    <package id="DIP16"/>
    <!--<package id="DIP14"/>-->
    <package id="RELAY"/>
  </packages>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <locations>
    <location id="BOX" name="Box" summary="Box on the shelf"/>
    <location id="BOX2" name="Box 2" summary="Another box on the shelf"/>
  </locations>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <components>
    <directory href="components-2/" component-description-document-regexp="^component-.+\.xml$"/>
  </components>

</component-inventory-specification>
