<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../grammar/ci-specification.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<component-inventory-specification xmlns="https://eriksiegel.nl/ns/component-inventory" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:sml="http://www.eriksiegel.nl/ns/sml" xsi:schemaLocation="https://eriksiegel.nl/ns/component-inventory ../grammar/ci-specification.xsd">

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <properties>

    <!-- For transistors: -->
    <property id="collector-to-base" name="Collector to base voltage" value-pattern="^-?[0-9]+$" suffix="V"/>
    <property id="collector-to-emitter" name="Collector to emitter voltage" value-pattern="^-?[0-9]+$" suffix="V"/>
    <property id="emitter-to-base" name="Emitter to base voltage" value-pattern="^-?[0-9]+$" suffix="V"/>
    <property id="collector-current" name="Collector current" value-pattern="^-?[0-9]+$" suffix="mA"/>
    <property id="gain" name="Gain" value-pattern="^[0-9]+$"/>

  </properties>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <categories>

    <!-- Simple components: -->
    <category id="comp" name="Simple components">
      <description>
        <p>Straight and simple components, like transistors, MOS-FETs etc.</p>
      </description>
    </category>

    <category id="transistor" name="Transistors"
      optional-property-idrefs="collector-to-base collector-to-emitter emitter-to-base collector-current gain">
      <categories>
        <category id="npn" name="Transistors - NPN"/>
        <category id="pnp" name="Transistors - PNP"/>
        <category id="power" name="Transistors - Power"/>
        <category id="dual" name="Transistors - Dual" summary="Two transistors in one package"/>
        <category id="darlington" name="Transistors - Darlington"/>
        <category id="special" summary="Transistors - Special"/>
      </categories>
    </category>

    <category id="mos-fet" name="MOS-FETs">
      <categories>
        <category id="power" name="MOS-FETs - Power"/>
      </categories>
    </category>

    <category id="thyristor" name="Thyristors"/>
    <category id="triac" name="Triacs"/>


    <!-- Digital components: -->
    <category id="I2C" name="I2C related products"/>
    <category id="memory" name="Computer memory"/>
    <category id="timer" name="Timer/timing related"/>
    <category id="74HC"/>
    <category id="SN74"/>
    <category id="cmos" name="CMOS"/>
    <category id="HEF4000"/>
    <category id="microcontroller" name="Micro-controllers"/>

    <category id="logic" name="Logic ICs">
      <categories>
        <category id="switch" name="Switches"/>
        <category id="schmitt-trigger" name="Schmitt triggers"/>
        <category id="nand" name="NAND gates"/>
      </categories>

    </category>

    <!-- Various: -->
    <category id="driver" name="Drivers"/>
    <category id="motor-driver" name="Motor drivers"/>
    <category id="analog-computation" name="Analog computation"/>
    <category id="opamp" name="Operational amplifiers"/>
    <category id="optocoupler" name="Optocouplers"/>
    <category id="dac" name="Digital-analog converter"/>
    <category id="rectifier" name="Rectifiers"/>
    <category id="display" name="Display related components"/>
    <category id="thermal" name="Thermal switches"/>
    <category id="communication" name="Communication related ICs"/>
    <category id="oscillator" name="Oscillators"/>
    <category id="audio" name="Audio related components"/>
    <category id="movement" name="MOvement related components"/>
  </categories>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <price-ranges>
    <price-range id="very-cheap" min-inclusive="0.00" max-inclusive="0.50" name="Very cheap (less than €0.50)"/>
    <price-range id="cheap" min-inclusive="0.51" max-inclusive="2.00" name="Cheap (between €0.50 and €2)"/>
    <price-range id="expensive" min-inclusive="2.01" max-inclusive="10.00" name="Expensive (between €2 and €10)"/>
    <price-range id="very-expensive" min-inclusive="10.01" max-inclusive="1000.00" name="Very expensive (over €10)."/>
  </price-ranges>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <packages href-default-base-directory="packaging">
    <package id="DIP4" summary="4-pin dual inline package"/>
    <package id="DIP6" summary="6-pin dual inline package"/>
    <package id="DIP8" summary="8-pin dual inline package"/>
    <package id="DIP14" summary="14-pin dual inline package"/>
    <package id="DIP16" summary="16-pin dual inline package"/>
    <package id="DIP18" summary="18-pin dual inline package"/>
    <package id="DIP20" summary="20-pin dual inline package"/>
    <package id="DIP24" summary="24-pin dual inline package"/>
    <package id="DIP28" summary="28-pin dual inline package"/>
    <package id="DIP40" summary="40-pin dual inline package"/>

    <package id="TO3"/>
    <package id="TO8"/>
    <package id="TO18"/>
    <package id="TO39"/>
    <package id="TO71"/>
    <package id="TO72"/>
    <package id="TO92"/>
    <package id="TO126"/>
    <package id="TO220"/>
    <package id="TO225"/>
    <package id="TO247"/>
    <package id="TO998"/>
    <package id="TO3PN"/>

    <package id="SMD" name="SMD package"/>
  </packages>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <locations>
    <location id="box-sub-boxes" name="Component box (with sub-boxes)"/>
    <location id="bag" name="Plastic bag in storage container"/>
    <location id="box-workbench" name="Component box above workbench"/>
  </locations>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <components>
    <directory href="components"/>
    <directory href="components-opamps"/>
    <directory href="components-simple"/>
    <directory href="components-analog"/>
    <directory href="components-digital"/>
    <directory href="components-other"/>

  </components>

</component-inventory-specification>
