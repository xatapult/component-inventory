    <price-range min-inclusive="0.0" max-inclusive="1" id="cheap2"/>
  </price-ranges>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <packages>
    <package id="DIP16" name="asc"/>
    <package id="DIP14" name="asc"/>

  </packages>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <locations>
    <location id="AAA">
      <description>
        <sml:para>wkdwqlkdqlwd</sml:para>
      </description>
    </location>
    <!--  -->
  </locations>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

  <components>
    <directory href="components/" component-description-document-regexp="^component-.+\.xml$"/>
    
  </components>

</component-inventory-specification>
